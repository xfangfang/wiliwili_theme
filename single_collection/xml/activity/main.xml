<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box
            axis="column"
            width="100%"
            height="100%">
        <AutoTabFrame
                id="main/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/bilibili"
                defaultTab="0"
                sidebarWidth="120"
                sidebarPosition="left">

            <Tab label="给老人看"
                 fontSize="18">
                <MineCollectionVideoList
                        marginTop="10"
                        type="1"
                        footerHidden="true"
                        collection="1113477700"/>
            </Tab>

            <Tab label="@i18n/wiliwili/mine/collection"
                 fontSize="18">
                <MineCollection
                        marginTop="10"
                        type="1"/>
            </Tab>

            <Tab label="@i18n/wiliwili/mine/subscription"
                 fontSize="18">
                <MineCollection
                        marginTop="10"
                        type="2"/>
            </Tab>

            <Tab label="@i18n/wiliwili/mine/anime"
                 fontSize="18">
                <MineBangumi
                        marginTop="10"
                        type="1"/>
            </Tab>

            <Tab label="@i18n/wiliwili/mine/series"
                 fontSize="18">
                <MineBangumi
                        marginTop="10"
                        type="2"/>
            </Tab>

            <Tab label="@i18n/wiliwili/mine/later"
                 fontSize="18">
                <MineLater
                        marginTop="10"/>
            </Tab>

        </AutoTabFrame>
        <brls:Box
                wireframe="false"
                width="100"
                axis="column"
                justifyContent="center"
                alignItems="center"
                positionType="absolute"
                positionBottom="20">
            <CustomButton
                    id="main/setting"
                    focusable="true"
                    highlightCornerRadius="50"
                    cornerRadius="50"
                    wireframe="false">
                <SVGImage
                        focusable="true"
                        width="48"
                        height="48"
                        SVG="@res/svg/ico-setting.svg"/>
            </CustomButton>
        </brls:Box>
    </brls:Box>
</brls:AppletFrame>
