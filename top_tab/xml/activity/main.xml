<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box
            axis="column"
            width="100%"
            height="100%">
        <AutoTabFrame
                id="main/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/bilibili"
                disableNavigationRight="true"
                disableNavigationDown="true"
                defaultTab="0"
                sidebarPosition="top">

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-home.svg"
                 iconActivate="@res/svg/ico-home-activate.svg">
                <HomeTab/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 icon="@res/svg/ico-dynamic.svg"
                 iconActivate="@res/svg/ico-dynamic-activate.svg">
                <DynamicTab/>
            </Tab>

            <Tab label=""
                 fontSize="18"
                 focusRight="main/setting"
                 icon="@res/svg/ico-mine.svg"
                 iconActivate="@res/svg/ico-mine-activate.svg">
                <MineTab/>
            </Tab>
        </AutoTabFrame>
        <brls:Box
                wireframe="false"
                width="100"
                axis="column"
                justifyContent="center"
                alignItems="center"
                positionType="absolute"
                positionTop="10"
                positionRight="20">
            <CustomButton
                    id="main/setting"
                    focusable="true"
                    focusUp="main/setting"
                    highlightCornerRadius="50"
                    cornerRadius="50"
                    wireframe="false">
                <SVGImage
                        focusable="true"
                        width="48"
                        height="48"
                        SVG="@res/svg/ico-setting.svg"/>
            </CustomButton>
        </brls:Box>
    </brls:Box>
</brls:AppletFrame>
